@model IEnumerable<ToDoItem>

<h2>To-Do List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(item.IsCompleted ? "Yes" : "No")</td>
                <td>
                    <a href="@Url.Action("Edit", "ToDo", new { id = item.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "ToDo")" class="btn btn-primary">Add New To-Do</a>
